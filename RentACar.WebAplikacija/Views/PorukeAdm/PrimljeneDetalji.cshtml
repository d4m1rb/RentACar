@model RentACar.WebAplikacija.ViewModels.PorukaAdmPrimljeneDetaljiVM
@{
    ViewData["Title"] = "Detalji poruke";
    Layout = "~/Views/Shared/_LayoutTemplateAdmin.cshtml";
}


@section Scripts
{

    <script>
        $(document).ready(function () {
            $().ready(function () {

                var p = $("li");

                p.removeClass("kt-menu__item--active");
                p.removeClass("kt-menu__item--here");
                p.removeClass("kt-menu__item--open");

                $("#PorukePrimljeneListItem").addClass("kt-menu__item--active");
                $("#PorukaGlavniMeni").addClass("kt-menu__item--open kt-menu__item--here");
                $("#PorukaSporedniMeniDiv").addClass("kt-menu__item--open kt-menu__item--here");

                document.getElementById("PorukaGlavniMeni").style = "";
                document.getElementById("PorukaSporedniMeniDiv").style = "";
            });
        });
    </script>
}

    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">

        <!-- begin:: Subheader -->
        <div class="kt-subheader   kt-grid__item" id="kt_subheader">
            <div class="kt-container  kt-container--fluid ">
                <div class="kt-subheader__main">


                    <span class="kt-subheader__separator kt-hidden"></span>

                </div>

            </div>
        </div>
        <!-- end:: Subheader -->
        <!-- begin:: Content -->

        <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
            <div class="row">

                <div class="col-lg-100" style="display:inline-block; width:100%; align-items:middle;text-align:center;">
                   
                        <!--begin::Portlet-->
                        <div class="kt-portlet" style="width:400px;display:inline-block; text-align:left;">
                            <div class="kt-portlet__head">
                                <div class="kt-portlet__head-label">
                                    <h3 class="kt-portlet__head-title">
                                        Poruka od uposlenika
                                    </h3>
                                </div>
                            </div>
                            <!--begin::Form-->

                            <div class="kt-portlet__body">
                                <div class="kt-section kt-section--first" style="margin-bottom:0px;">
                                    <h3 class="kt-section__title" style="text-align:center;">Poruka od klijenta:</h3>
                                    <div class="kt-section__body">
                                        
                                        <div class="form-group row">
                                            <label class="col-lg-3 col-form-label-static">Pošiljaoc:</label>



                                            <div class="col-lg-6">
                                                <p class="form-control-static">@Model.PosiljaocInfo</p>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-3 col-form-label-static">Primaoc:</label>



                                            <div class="col-lg-6">
                                                <p class="form-control-static">@Model.PrimaocInfo</p>
                                            </div>
                                        </div>
                                    </div>

                                    <h3 class="kt-section__title" style="text-align:center;">Poruka</h3>
                                    <div class="kt-section__body">

                                        <div class="form-group row">

                                            <label class="col-lg-6 col-form-label" for="exampleTextarea">Tekst poruke</label>
                                            <textarea asp-for="@Model.Sadrzaj" readonly="" class="form-control" id="exampleTextarea" rows="5" name="porukaUposlenik.Sadrzaj">@Model.Sadrzaj</textarea>

                                        </div>

                                    </div>
                                </div>
                            </div>


                            <!--end::Form-->
                        </div>
                        <!--end::Portlet-->
                        @if (Model.Odgovoreno == true)
                        {
                            <div class="col-lg-100" style="text-align:center">
                                <a href="/PorukeAdm/Primljene" class="btn btn-success">OK</a>
                            </div>
                        }
                        else
                        {
                            <div class="col-lg-100" style="text-align:center">
                                <a href="/PorukeAdm/Odgovori?PorukaID=@Model.PorukaId" class="btn btn-success">Odgovori</a>
                                <a href="/PorukeAdm/Primljene" class="btn btn-success">OK</a>
                            </div>
                        }
                    
                    <!--end::Form-->
                </div>
            </div>
        </div>
    </div>

